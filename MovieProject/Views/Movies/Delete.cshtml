@model MovieProject.Models.Movie

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<div ng-controller="deleteController">

    <div>
        <h4>Movie</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Title:
            </dt>

            <dd>
                {{movie.Title}}
            </dd>

            <dt>
                Release Date:
            </dt>

            <dd>
                {{movie.ReleaseDate}}
            </dd>

            <dt>
                Genre:
            </dt>

            <dd>
                {{movie.Genre}}
            </dd>

            <dt>
                Price:
            </dt>

            <dd>
                {{movie.Price}}
            </dd>

            <dt>
                Rating:
            </dt>

            <dd>
                {{movie.Rating}}
            </dd>

        </dl>

    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" ng-click="delete" class="btn btn-default" /> |
            <a ng-href="/Movies/Index/">Back to Movie List</a>
        </div>
    }
</div>
